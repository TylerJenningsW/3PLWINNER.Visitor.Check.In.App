<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_android_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mainScreenLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/winner_logo"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintStart_toStartOf="@id/left"
        app:layout_constraintTop_toTopOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/middle"/>

    <EditText
        android:id="@+id/edtMainScreenFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_white"
        android:hint="First Name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/middle" />

    <EditText
        android:id="@+id/edtMainScreenLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_white"
        android:hint="Last Name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/edtMainScreenFirstName" />

    <EditText
        android:id="@+id/edtMainScreenCompany"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_white"
        android:hint="Company"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/edtMainScreenLastName" />


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerWhoAreYouVisiting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_white"
        android:hint="Who Are You Visiting?"
        android:importantForAutofill="no"
        android:spinnerMode="dropdown"
        android:dropDownWidth="match_parent"
        android:minHeight="48dp"
        android:padding="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/edtMainScreenCompany" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_white"
        android:hint="Reason"
        android:importantForAutofill="no"
        android:spinnerMode="dropdown"
        android:dropDownWidth="match_parent"
        android:minHeight="48dp"
        android:padding="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/spinnerWhoAreYouVisiting" />

    <EditText
        android:id="@+id/edtMainScreenEmergencyContactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_white"
        android:hint="Emergency Contact Name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/spinnerReason" />
    <EditText
        android:id="@+id/edtMainScreenEmergencyContactPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_white"
        android:hint="Emergency Contact Phone Number"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/edtMainScreenEmergencyContactName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMainScreenSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="Check-In"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/edtMainScreenEmergencyContactPhoneNumber" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMainScreenCheckout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_navyblue"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="Check Out"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/btnMainScreenSubmit" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3PLWINNER, All Rights Reserved 2023"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintEnd_toStartOf="@id/right" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <ProgressBar
        android:id="@+id/pbLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>